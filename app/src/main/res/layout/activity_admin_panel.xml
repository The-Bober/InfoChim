<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/createLessonButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:text="Create Lesson"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/CreateLectureButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/CreateLectureButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Create Lecture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/CreateQuizButton"
        app:layout_constraintTop_toBottomOf="@+id/createLessonButton" />

    <Button
        android:id="@+id/CreateQuizButton"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:text="Create Quiz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CreateLectureButton" />

</androidx.constraintlayout.widget.ConstraintLayout>