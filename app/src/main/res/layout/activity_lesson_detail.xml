<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lessonContentText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lesson Content"
            android:padding="8dp" />

        <TextView
            android:id="@+id/lessonChemicalReactionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chemical Reaction"
            android:padding="8dp" />

        <TextView
            android:id="@+id/lessonVideoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Video URL"
            android:padding="8dp" />
    </LinearLayout>
</ScrollView>